{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.pug",
      {
        "include": "public/**/*",
        "exclude": "**/*.js"
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  }
}
